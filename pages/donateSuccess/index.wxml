<!--pages/donateSuccess/index.wxml-->
<view class="container">

  <view class="success-img">
    <image src='/static/images/bbc2-donate-success1.png' style='width:60px;height:60px;margin-bottom:7px;'></image>
    <view style="margin-bottom: 12px;font-size: 18px;color: #333">
      <b>支付成功</b>
    </view>
    <view style='font-size: 15px;font-weight: 300;color: #333'>感谢您的支持，分享给更多的朋友吧</view>
    <view class="tuijian">
      <view class="is-line"></view>
      <view class="tab-name">优选 农产</view>
      <view class="is-line"></view>
    </view>
    <view class="card-items">
      <view class="card" wx:for="{{ hotPcc.data }}" wx:for-item="pcc">
        <navigator url="../view/index?donateView={{ pcc.guid }}">
          <view class="top-img">
            <image src='{{ pcc.mainImg }}' style='width:100%;height:100px;border-top-left-radius:10rpx;border-top-right-radius:10rpx;'></image>
          </view>
          <view class="nonghu-detials">
            <view class="nonghu-de">
              <view class="nonghu-img">
                <image src="{{ pcc.imageUrl }}" binderror='imageError' style="width:100%;height:100%"></image>
              </view>
              <view class="nonghu-name">{{ pcc.nickName }}</view>
            </view>
            <view class="remain-day">剩余天数 {{ pcc.daysRemain }} 天</view>
          </view>
          <view class="title">
            <b>{{ pcc.condition }}…</b>
          </view>
        </navigator>
      </view>
    </view>
  </view>


  <navigator url="../home/index" open-type="switchTab">
    <view class='read-more'>查看更多 >></view>
  </navigator>
  <navigator url="../view/index?donateView={{donateView}}">
    <view class='donateTab'>
      <view class="dView">查看项目</view>
    </view>
  </navigator>
</view>