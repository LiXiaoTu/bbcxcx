/* pages/donateSuccess/index.wxss */
.container{
  background: #efeff4;
  height:auto;
  padding-bottom:3.5rem;
}
.success-img{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 35px;
  text-align: center;
}
.tuijian{
	margin-top:1rem;
	width:94%;
	padding:.2rem 3%;
	display:flex;
  justify-content: space-between;
  flex-direction: row;
}
.is-line{
  margin-top: 0.5rem;
  background: #8C8C8C;
  width:38%;
  height: 2rpx;
}
.tab-name{
  width:20%;
  text-align: center;
  font-size: 28rpx;
  color: #595959;
}
.card-items{
  width: 94%;
  margin: .5rem 3%;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}
.card{
  width:48%;
  height: auto;
  border-radius: 10rpx;
  background: white;
  margin-bottom: 10px;
  box-shadow:0 0.05rem 0.1rem rgba(0,0,0,.3);
}
.top-img{
  width: 100%;
  height:200rpx;
}
.nonghu-detials{
  width:96%;
  margin: 0 3%;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
}
.nonghu-img{
  width: 40rpx;
  height:40rpx;
}
.nonghu-name,.remain-day{
  color:#262626;
  font-size: 20rpx;
  margin-top: 10rpx
}
nonghu-name{
  padding-left: 5px;
}
.nonghu-de{
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  width: 45%;
}
.title{
  width:94%;
  margin: 5px 3% 13px 3%;
  font-size: 14px;
  height: 44px;
  text-align: left;
  overflow: hidden;
}
.read-more{
  font-size:14px;
  color:#0894ec;
  text-align:center;
  padding-bottom:10px;
}
.donateTab{
  text-align: center;
  font-size: 17px;
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 2001;
  display: flex;
  flex-direction: row;
}
.dCard{
  width: 50%;
  background-color: #fff;
  color: #35A0FB;
  margin: 0;
  padding: .85rem 0;
  max-width: 640px;
}
.dView{
  width: 100%;
  background-color: #35A0FB;
  color: #fff;
  margin: 0;
  padding: .85rem 0;
  max-width: 640px;
}