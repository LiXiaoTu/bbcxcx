<!--index.wxml-->
<view class="container">
  <view class="section">
    <scroll-view scroll-y="true" lower-threshold="200" style="height:1200px;" bindscrolltolower="lower">
      <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular>
        <block wx:for="{{imgUrls}}" wx:key="">
          <swiper-item>
            <image src="{{item}}" class="slide-image" />
          </swiper-item>
        </block>
      </swiper>
      <view class="view-subtitle">
        <text class="subtitle">
        • 精选项目
      </text>
      </view>
      <view wx:if="{{hotList.data.length > 0}}">
        <view class="pcc-item" wx:for="{{ hotList.data }}" wx:key='' wx:for-item="pcc">
          <view class="view-user">
            <image lazy-load class="view-user-headimg" src="{{ pcc.imageUrl }}" binderror='imageError' data-errorimg="{{index}}"></image>
            <text class="view-user-nick">{{ pcc.nickName }}</text>
            <image lazy-load class="view-pcc-tag" src="http://static.weixingongchang.com/img/pcc/pcc-tuijian.png" binderror='imageError' data-errorimg="{{index}}" mode='aspectFit'></image>
          </view>
          <view class="view-pcc">
            <image lazy-load class="view-pcc-mainimg" src="http://osscdn.zhongtuobang.com/pcc/{{ pcc.mainImg }}!thumbpcc"></image>
          </view>
          <view class="view-pcc-des">
            <text>{{ pcc.condition }}</text>
          </view>
          <view class="view-pcc-pro">
            <progress percent="{{ pcc.progress }}" stroke-width='4' show-info active activeColor="#2097ff" />
          </view>
          <view class="view-pcc-info">
            <text>目标：{{ pcc.targetAmt }}元</text>
            <text>已筹：{{ pcc.fundAmt }}元</text>
            <text>剩余：{{ pcc.daysRemain }}天</text>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
</view>

<view class="modals-contain" wx:if="{{ mask }}">
  <view class="checkAuthTitle">
    微信授权
  </view>
  <view class="checkAuthContent">
    帮帮爱心筹申请获取公开信息
    (拒绝授权则无法使用帮帮爱心筹支持项目)
  </view>
  <view style="display:flex;">
    <view class="checkAuthButton" bindtap='hideMask'><button style="background: #fff;">拒绝</button></view>
    <view class="checkAuthButton" bindtap='hideMask' style="color: #35A0FB;border:none"><button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo" style="background: #fff;color: #35A0FB">允许</button></view>
  </view>
</view>
<view class="mask" wx:if="{{ mask }}"></view>