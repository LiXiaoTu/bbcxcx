<!--pages/pccOrder/index.wxml-->
<view class="content">
  <navigator url="../addressList/index?oid={{ orderID }}">
    <view class="pcc-address-info">
      <view style='width:12%'>
        <image src='/static/images/pcc-repay-location.png' style="width:40rpx;height:48rpx"></image>
      </view>
      <view style="width:86%">
        <view class="weui-cell weui-cell_access">
          <view class="weui-cell__bd">
            <view style="display: inline-block; vertical-align: middle">
              <text>收货人地址：{{ receiveName }}{{ mobile }}</text>
              <text>{{ address }}</text>
            </view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
      </view>
    </view>
  </navigator>
  <image src="/static/images/pcc-order-addr.png" style="width:100%;height:12rpx;display:block;"></image>
  <view class="pcc-repay">
    <view>回报清单</view>
    <view class="pcc-repay-list" wx:for="{{orderDetail.subOrders}}" wx:for-item="subOrder">
      <view style="width:70%;">
        回报{{ subOrder.index }}：支持{{ subOrder.money }}元
      </view>
      <view>
        数量：{{ subOrder.number }}
      </view>
    </view>
    <view class="pcc-repay-list">
      <view style="width:70%;">
        配送费用
      </view>
      <view>
        {{ orderDetail.freight }}
      </view>
    </view>
  </view>

  <view class="pcc-comment">
    <view>
      <text> 鼓励他一下</text>
    </view>
    <view>
      <textarea class="weui-textarea" placeholder="说点什么吧！" bindblur="addComment" style="height: 4em;background:#F8F8F8;padding:10rpx;width:97%;font-size:32rpx;" />
    </view>
  </view>

  <view class='view-dnate-button'>
    <view bindtap='follow' style='width:60%'>
      <view style='font-size:34rpx;'>
        合计：
        <text space="nbsp" style="color:#F44336">￥{{ allMoney }}  </text>
      </view>
    </view>

    <view style='width:60%;height:50px;line-height:50px;background:#2097FF;color:#fff;' bindtap='createOrder'>
      <text>立即支付</text>
    </view>

  </view>

</view>