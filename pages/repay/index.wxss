/* pages/repay/index.wxss */

.view-pcc {
  display: flex;
  flex-direction: row;
  position: relative;
}

.view-pcc-mainimg {
  width: 75px;
  height: 75px;
  padding-left: 20rpx;
  vertical-align: center;
}

.view-pcc-title {
  margin: 20rpx;
  font-size: 16px;
  font-weight: 700;
}

.view-pcc-time {
  margin: 20rpx;
  color: rgb(169, 169, 169);
  font-size: 14px;
}

.view-dnate-button {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  background: #fff;
  justify-content: center;
  align-items: center;
  text-align: center;
  height: 50px;
  z-index: 2001;
  border-top: 1px solid #f7f7f8;
}

.view-tabs-content {
  margin-bottom: 120rpx;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 2000;
}

.modals-contain {
  width: 100%;
  position: absolute;
  bottom: 7%;
  z-index: 2001;
}

.imgRotate {
  transform: rotate(180deg);
  -ms-transform: rotate(180deg);
  -moz-transform: rotate(180deg);
  -webkit-transform: rotate(180deg);
  -o-transform: rotate(180deg);
}
